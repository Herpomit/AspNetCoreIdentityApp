
@{
    ViewData["Title"] = "Index";
}
@model List<AdminModel.RoleViewModel>

<div class="row">
    <div class="col-md-6 offset-md-2">
        <h1>
            Roller
        </h1>
    </div>
    <div class="col-md-2">
        <a asp-controller="Roles" asp-action="RoleCreate" asp-area="Admin" class="btn btn-primary">Rol Ekle</a>
    </div>
</div>

<div class="row">
    
    <div class="col-md-8 offset-md-2">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-info" role="alert">
                @TempData["SuccessMessage"]
            </div>
        }
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Rol Id</th>
                    <th>Rol Adı</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>
                            <a asp-area="Admin" asp-controller="roles" asp-action="roleupdate" asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm">Güncelle</a>
                        </td>
                        <td>
                            <a asp-area="Admin" asp-controller="roles" asp-action="roledelete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


